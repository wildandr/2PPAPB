<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DFEDFB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/tvWelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello, "
            android:textSize="24dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:gravity="left"
            android:textColor="#0064D2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top Movies"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:gravity="left"
            android:textStyle="bold"
            android:textColor="#0064D2"
            android:textSize="28dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginRight="8dp">

                <!-- Item Film 1 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSpiderman"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    app:cardCornerRadius="15dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:src="@drawable/spiderman"
                            android:background="@drawable/rounded_corners"
                            android:contentDescription="Film 1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Spiderman"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#0064D2"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ratings"
                            android:contentDescription="Rating Bintang"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item Film 3 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAvenger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    app:cardCornerRadius="15dp"
                    android:focusable="true">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/avenger"
                            android:contentDescription="Film 3"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Avenger"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#0064D2"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ratings"
                            android:contentDescription="Rating Bintang"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item Film 5 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:id="@+id/cardAyatAyatCinta"
                    app:cardCornerRadius="15dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:padding="8dp">

                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ayatayatcinta"
                            android:contentDescription="Film 5"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ayat Ayat Cinta"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#0064D2"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ratings"
                            android:contentDescription="Rating Bintang"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="8dp">

                <!-- Item Film 2 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHulk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="15dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_marginTop="4dp"
                            android:layout_height="200dp"
                            android:src="@drawable/hulk"
                            android:contentDescription="hulk"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hulk"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#0064D2"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ratings"
                            android:contentDescription="Rating Bintang"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item Film 4 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:id="@+id/cardSusterNgesot"
                    app:cardCornerRadius="15dp"
                    android:focusable="true">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/susterngesot"
                            android:contentDescription="Film 4"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Suster Ngesot"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#0064D2"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ratings"
                            android:contentDescription="Rating Bintang"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Item Film 6 -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:id="@+id/cardRatatouille"
                    app:cardCornerRadius="15dp"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"

                        android:padding="8dp">

                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_height="200dp"
                            android:layout_width="match_parent"
                            android:src="@drawable/ratatouille"
                            android:contentDescription="Film 6"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ratatouille"
                            android:layout_gravity="center"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:gravity="center"
                            android:textColor="#0064D2"
                            android:layout_marginTop="4dp" />

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ratings"
                            android:contentDescription="Rating Bintang"
                            android:scaleType="fitCenter"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
